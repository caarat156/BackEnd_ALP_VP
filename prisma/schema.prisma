generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model event_booking {
  event_booking_id     Int                @id @default(autoincrement())
  user_id              Int?
  performance_event_id Int?
  total_price          Decimal?           @db.Decimal(12, 2)
  quantity             Int?
  status               String?            @db.VarChar(50)
  performance_event    performance_event? @relation(fields: [performance_event_id], references: [performance_event_id], onDelete: NoAction, onUpdate: NoAction)
  users                users?             @relation(fields: [user_id], references: [user_id], onDelete: NoAction, onUpdate: NoAction)
}

model event_schedule {
  event_schedule_id    Int                @id @default(autoincrement())
  performance_event_id Int?
  date                 DateTime?          @db.Date
  start_time           DateTime?          @db.Time(6)
  end_time             DateTime?          @db.Time(6)
  price                Decimal?           @db.Decimal(12, 2)
  performance_event    performance_event? @relation(fields: [performance_event_id], references: [performance_event_id], onDelete: NoAction, onUpdate: NoAction)
}

model location {
  location_id Int     @id @default(autoincrement())
  city_name   String  @db.VarChar(100)
  place       place[]
  users       users[]
}

model performance_event {
  performance_event_id Int              @id @default(autoincrement())
  place_id             Int?
  title                String?          @db.VarChar(255)
  event_description    String?
  venue_address        String?
  gmaps_link           String?
  image_url            String?
  event_booking        event_booking[]
  event_schedule       event_schedule[]
  place                place?           @relation(fields: [place_id], references: [place_id], onDelete: NoAction, onUpdate: NoAction)
}

model place {
  place_id          Int                 @id @default(autoincrement())
  place_category_id Int?
  location_id       Int?
  place_name        String?             @db.VarChar(255)
  place_description String?
  address           String?
  gmaps_link        String?
  image_url         String?
  rating_avg        Decimal?            @db.Decimal(3, 2)
  performance_event performance_event[]
  location          location           @relation(fields: [location_id], references: [location_id], onDelete: NoAction, onUpdate: NoAction)
  place_category    place_category     @relation(fields: [place_category_id], references: [place_category_id], onDelete: NoAction, onUpdate: NoAction)
  place_review      place_review[]
  reels_content     reels_content[]
}

model place_category {
  place_category_id Int     @id @default(autoincrement())
  category_name     String  @db.VarChar(255)
  place             place[]
}

model place_review {
  review_id  Int       @id @default(autoincrement())
  user_id    Int?
  place_id   Int?
  rating     Int?
  comment    String?
  created_at DateTime? @default(now()) @db.Timestamp(6)
  place      place?    @relation(fields: [place_id], references: [place_id], onDelete: NoAction, onUpdate: NoAction)
  users      users?    @relation(fields: [user_id], references: [user_id], onDelete: NoAction, onUpdate: NoAction)
}

model reels_content {
  content_id  Int       @id @default(autoincrement())
  user_id     Int?
  place_id    Int?
  content_url String?
  caption     String?   @db.VarChar(150)
  created_at  DateTime? @default(now()) @db.Timestamp(6)
  place       place?    @relation(fields: [place_id], references: [place_id], onDelete: NoAction, onUpdate: NoAction)
  users       users?    @relation(fields: [user_id], references: [user_id], onDelete: NoAction, onUpdate: NoAction)
}

model users {
  user_id           Int             @id @default(autoincrement())
  selected_location Int?
  name              String?         @db.VarChar(100)
  username          String?         @db.VarChar(100)
  email             String?         @unique @db.VarChar(150)
  password          String?         @db.VarChar(255)
  phone_number      String?         @db.VarChar(20)
  profile_photo     String?
  event_booking     event_booking[]
  place_review      place_review[]
  reels_content     reels_content[]
  location          location?       @relation(fields: [selected_location], references: [location_id], onDelete: NoAction, onUpdate: NoAction)
}
